<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_rect_gradient_blk_purp"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgv_home_card_cta"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:layout_gravity="start"
                android:src="@drawable/_img_maker_kit"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/shr_card_home_cta_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/imgv_home_card_cta"
                android:layout_toRightOf="@id/imgv_home_card_cta"
                android:padding="2dp"
                android:text="@string/shr_card_home_cta_title"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/primaryTextColor" />

            <TextView
                android:id="@+id/shr_card_home_cta_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shr_card_home_cta_title"
                android:layout_toEndOf="@id/imgv_home_card_cta"
                android:layout_toRightOf="@id/imgv_home_card_cta"
                android:padding="2dp"
                android:text="@string/shr_card_home_cta_desc"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/primaryTextColor" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>